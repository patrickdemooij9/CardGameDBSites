@using SkytearHorde.Business.Services;
@inject SettingsService _settingsService
@inherits UmbracoViewPage
@{
    var siteSettings = _settingsService.GetSiteSettings();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/"/>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/output.css" asp-append-version="true" />
    <meta-fields></meta-fields>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <style>
        :root {
            --main-color: @(siteSettings.MainColor);
            --main-color-hover: @(siteSettings.HoverMainColor);
            --nav-border-color: @(siteSettings.BorderColor);
        }
    </style>

    <script src="https://cdn.jsdelivr.net/gh/hankhank10/alpine-fetch@main/alpine-fetch.js"></script>
    <script src="/scripts/lazysizes.min.js" async=""></script>

    <render-script position="HeadBottom"></render-script>
</head>
<body class="bg-gray-100 min-h-screen">
    <render-script position="BodyTop"></render-script>

    <div class="flex flex-col min-h-screen">
        @RenderBody()
    </div>

    <script src="/js/htmx.min.js" asp-append-version="true"></script>
    <script src="/js/main-bundle.js" asp-append-version="true"></script>
    @if (Model is not CreateSquad)
    {
        <script src="/js/banner-bundle.js" asp-append-version="true"></script>
    }
    <render-script position="BodyBottom"></render-script>
</body>
</html>
